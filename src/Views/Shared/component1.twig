{% set componentName = "wiloke-post-tags-categories-avenue" %}

<a href="{{item.link}}" rel:"ugc" class="group* wiloke-container pos:relative d:flex ai:center td:none! bd:1px_solid_#f2f2f7 bgc:#fff h:60px bdrs:15px p:5px mb:3px {{componentName}}-1" style="{{colorLightVariable}} {{colorGray2Variable}}">
